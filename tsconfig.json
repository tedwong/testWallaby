{
    "compilerOptions": {
        "outDir": "./ts-build/",
        "sourceRoot": "./src",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es6",
        "allowJs": true,
        "jsx": "react",
        "experimentalDecorators": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
     "node_modules"   
    ]
}
